<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backcolor"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient"
        android:orientation="vertical">
        <View
            android:id="@+id/home_bar_view"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/transparent"
            />
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="@dimen/top_title_size"
            android:textColor="@drawable/white"
            android:layout_height="@dimen/top_title_height"
            android:text="悦农通"/>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text32"
            android:textSize="@dimen/text_size_14"
            android:text="文字输入："/>
        <ImageView
            android:id="@+id/microphone_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:onClick="onClick"
            android:background="@drawable/microphone"/>
    </LinearLayout>

    <EditText
        android:id="@+id/content_text_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_solid_white_lined3_shape"
        android:textColorHint="@color/text99"
        android:lineSpacingExtra="6dp"
        android:hint="请输入内容"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/text64" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择发音人"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text32" />

        <TextView
            android:id="@+id/location_address_tv7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/arrow_right_green"
            android:gravity="right"
            android:onClick="onClick"
            android:textColor="@color/text64"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:lineSpacingExtra="4dp"
        android:text="@string/voice_shuoming_text"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/text99" />
    <Button
        android:id="@+id/submit_send_bt"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="14dp"
        android:text="语音合成"
        android:onClick="onClick"
        android:background="@drawable/btn_submit_blue_corler"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>