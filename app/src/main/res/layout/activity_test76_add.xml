<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backcolor"
    android:orientation="vertical">
    <include
        android:id="@+id/zl_headerBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_topbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/choose_img_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:clickable="true"
                        android:gravity="left"
                        android:text="图片选择"
                        android:drawablePadding="6dp"
                        android:drawableRight="@drawable/arrow_right_green"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/text32" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/backgroud_nodata"
                        android:scaleType="fitCenter"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_choose"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分组选择"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text32" />
                <TextView
                    android:id="@+id/location_address_tv0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:gravity="right"
                    android:drawablePadding="6dp"
                    android:drawableRight="@drawable/arrow_right_green"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text64" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text32"
                        android:textSize="@dimen/text_size_14"
                        android:text="名字："/>
                    <TextView
                        android:id="@+id/content_num_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_12"
                        android:gravity="right"

                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>

                <EditText
                    android:id="@+id/content_text_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:background="@null"
                    android:textColorHint="@color/text99"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="6dp"
                    android:hint="请输入内容（不超过10字）"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text64" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text32"
                        android:textSize="@dimen/text_size_14"
                        android:text="备注信息："/>
                    <TextView
                        android:id="@+id/content_num_tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_12"
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>

                <EditText
                    android:id="@+id/content_text_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:background="@null"
                    android:textColorHint="@color/text99"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="6dp"
                    android:hint="请输入内容（不超过200字）"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text64" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submit_send_bt"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="14dp"
        android:text="提交数据"
        android:onClick="onClick"
        android:background="@drawable/btn_submit_blue_corler"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>
