<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/translucent_white2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/close_ll"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:padding="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/close_pay"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="26dp"
        android:paddingBottom="46dp"
        android:background="@color/transparent"
        android:orientation="horizontal" >
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/gongyi_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/listview_bg2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="37dp"
                android:layout_height="34dp"
                android:background="@drawable/shichang_gy_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_title_size"
                android:layout_marginTop="14dp"
                android:textColor="@color/text32"
                android:text="发布供应"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/qiugou_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/listview_bg2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:background="@drawable/shichang_qg_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_title_size"
                android:layout_marginTop="14dp"
                android:textColor="@color/text32"
                android:text="发布求购"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/caiji_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/listview_bg2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/shichang_cj_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_title_size"
                android:layout_marginTop="14dp"
                android:textColor="@color/text32"
                android:text="价格采集"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_height="1dp"/>
    </LinearLayout>

</LinearLayout>