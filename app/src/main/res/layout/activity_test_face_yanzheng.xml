<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backcolor"
    android:orientation="vertical">
    <include
        android:id="@+id/zl_headerBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_topbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/choose_img_tv"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:gravity="left"
                    android:text="图片选择"
                    android:drawablePadding="6dp"
                    android:drawableRight="@drawable/arrow_right_green"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text32" />
                <TextView
                    android:id="@+id/content_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text64"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/backgroud_nodata"
                    android:scaleType="fitCenter"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/pop_height_line"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text32"
                android:textSize="@dimen/text_size_14"
                android:text="结果显示："/>
            <TextView
                android:id="@+id/result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text66"
                android:textSize="@dimen/text_size_12"
                android:lineSpacingExtra="6dp"
               >
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text32"
        android:padding="10dp"
        android:textSize="@dimen/text_size_14"
        android:text="选择要验证的个体："/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择类别"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text32" />
        <TextView
            android:id="@+id/location_address_tv7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"
            android:gravity="right"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/arrow_right_green"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/text64" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择个体"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text32" />
        <TextView
            android:id="@+id/location_address_tv0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"
            android:gravity="right"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/arrow_right_green"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/text64" />
    </LinearLayout>
    <Button
        android:id="@+id/submit_send_bt"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="14dp"
        android:text="开始验证"
        android:onClick="onClick"
        android:background="@drawable/btn_submit_blue_corler"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>
